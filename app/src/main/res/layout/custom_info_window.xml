<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="horizontal">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/imageView3"
                android:src="@mipmap/cambodia"
                android:padding="15dp" android:contentDescription="TODO"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/title" android:gravity="center"
                android:textColor="@android:color/black" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/des1" android:gravity="center_vertical"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/des2" android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>